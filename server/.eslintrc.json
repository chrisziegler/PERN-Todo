{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "linebreak-style": 0,
    "class-methods-use-this": 0,
    "no-tabs": 0,
    "no-unused-vars": [
      "warn",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "no-nested-ternary": 0,
    "guard-for-in": 0,
    "func-names": ["error", "never"],
    "no-console": 0,
    "no-plusplus": [
      "warn",
      { "allowForLoopAfterthoughts": true }
    ]
  }
}
